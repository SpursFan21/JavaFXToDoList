{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "javac",
        "args": [
          "--module-path",
          "${workspaceFolder}/lib/javafx-sdk-21.0.4/lib",
          "--add-modules",
          "javafx.controls,javafx.fxml",
          "-d",
          "out",
          "src/Main.java"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$javac"]
      }
    ]
  }
  